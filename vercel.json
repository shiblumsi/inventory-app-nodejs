{
  "version": 2,
  "builds": [
    {
      "src": "./server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "service/swagger.yaml",
          "prisma/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    },
    { "src": "/swagger-ui.css", "dest": "/public/swagger-ui.css" },
    { "src": "/swagger-ui-bundle.js", "dest": "/public/swagger-ui-bundle.js" },
    { "src": "/swagger-ui-standalone-preset.js", "dest": "/public/swagger-ui-standalone-preset.js" }
  ],
  "public": "./public"
}
